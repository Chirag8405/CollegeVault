# College Vault - Environment Configuration
# Developed by Chirag Poornamath

# Application Environment
NODE_ENV=development

# Email Configuration (SMTP)
# Recommended: Gmail with App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password

# SMS Configuration (Twilio)
# Sign up at twilio.com for credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Database Configuration
# SQLite database will be created automatically at data/app.db

# Security Settings
JWT_SECRET=your-secure-jwt-secret-key

# Application Settings
APP_NAME="College Vault"
APP_URL=http://localhost:8080

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,png,jpg,jpeg

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Email Template Settings
FROM_EMAIL=noreply@collegedocvault.com
FROM_NAME="College Vault"
SUPPORT_EMAIL=support@collegedocvault.com

# Development Settings (set to false in production)
DEBUG_MODE=true
CONSOLE_LOG_OTPS=true
